{
  "name": "anti-slavery-manuscripts",
  "version": "1.0.0",
  "description": "Anti-Slavery Manuscripts invites volunteers to transcribe documents from the American abolitionist movement, working together with the Zooniverse community and the Boston Public Library.",
  "repository": {
    "type": "git",
    "url": "https://github.com/zooniverse/anti-slavery-manuscripts"
  },
  "keywords": [
    "zooniverse"
  ],
  "scripts": {
    "start": "BABEL_ENV=development check-engines && check-dependencies && webpack-dashboard -p 3001 -- webpack-dev-server --config ./webpack.config.js",
    "test": "NODE_ENV=development BABEL_ENV=test mocha $(find src -name *.spec.jsx) --compilers js:babel-core/register || true",
    "test-travis": "NODE_ENV=development BABEL_ENV=test mocha $(find src -name *.spec.jsx) --compilers js:babel-core/register || true",
    "eslint": "eslint .",
    "build": "BABEL_ENV=production check-engines && check-dependencies && webpack --config webpack.production.config.js -p",
    "deploy-production": "NODE_ENV=production npm run build && publisssh dist zooniverse-static/www.antislaverymanuscripts.org"
  },
  "engines": {
    "node": "^8.1.2",
    "npm": ">=5"
  },
  "author": "Zooniverse",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/zooniverse/anti-slavery-manuscripts"
  },
  "homepage": "https://www.antislaverymanuscripts.org/",
  "dependencies": {
    "counterpart": "^0.18.1",
    "graphql-request": "^1.3.4",
    "history": "^4.6.1",
    "markdownz": "^7.6.3",
    "panoptes-client": "^2.11.2",
    "prop-types": "^15.5.10",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^4.4.6",
    "react-rnd": "^5.1.0",
    "react-router": "^3.0.0",
    "react-select": "^1.0.0-rc.5",
    "redux": "^3.6.0",
    "redux-devtools-extension": "^1.0.0",
    "redux-logger": "^2.7.4",
    "redux-thunk": "^2.1.0",
    "zoo-grommet": "^0.2.1",
    "zooniverse-react-components": "github:zooniverse/Zooniverse-react-components#v0.7.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-cli": "~6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^7.1.5",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-object-rest-spread": "~6.23.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "chai": "^3.5.0",
    "check-dependencies": "^1.1.0",
    "check-engines": "^1.5.0",
    "clean-webpack-plugin": "^0.1.14",
    "css-loader": "^0.26.1",
    "enzyme": "^2.8.2",
    "eslint": "^3.11.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "~4.6.0",
    "json-loader": "^0.5.4",
    "mini-css-extract-plugin": "^0.5.0",
    "mocha": "~4.0.0",
    "nib": "^1.1.2",
    "react-hot-loader": "~3.0.0-beta.7",
    "publisssh": "^1.1.0",
    "react-addons-test-utils": "^15.4.2",
    "react-test-renderer": "^15.4.2",
    "rimraf": "^2.5.4",
    "stats-webpack-plugin": "^0.4.2",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dashboard": "~3.0.0",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-dev-server": "~3.2.1",
    "webpack-hot-middleware": "^2.18.0"
  }
}
