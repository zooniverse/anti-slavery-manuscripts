@import "font-groups.styl"

.about-the-collection
  h2
    font-family: $playfair-display

  color: $dark-grey

  img
    max-width: 100%

  a
    @extend .secondary-head-link
    border-bottom: 2px solid transparent

    &:hover, &:focus
      border-bottom: 2px solid $eggplant
      color: $eggplant

  > div
    flex-wrap: wrap

  &__content
    @extend .body-copy
    display: inline-block
    font-size: 0.9em
    margin-bottom: 1em
    line-height: 1.5em

  &__sub-head
    @extend .body-copy
    font-size: 1.5em
    margin: 0

  &__intro
    margin: 4em 6em

    @media(max-width: 900px)
      margin: 1em

    div:first-child
      background-color: hsla(0, 100, 100, 0.55)
      flex: 2 1 40%
      margin-top: 4em
      padding: 1.5em

      a
        margin-top: 0

      h3
        @extend .main-title
        letter-spacing: 0.04em
        margin-top: 15px
        font-size: 2.75em

      i
        @extend .secondary-conjunctions
        border-bottom 1px solid #000
        display: inline-block
        font-size: 0.5em
        letter-spacing: 0
        margin-bottom: 0.75em
        padding-bottom: 0.05em
        vertical-align: middle

    div:nth-child(2)
      flex: 1 auto 60%
      max-width: 14em
      min-width: 10em
      text-align: right

      @media(max-width: 600px)
        display: none

  &__significance
    margin: 4em 2.5em

    @media(max-width: 400px)
      margin: 2em

    > div:first-child
      flex: 1 1 0%
      margin: 0 2em 2em 0
      min-width: 5em
      max-width: 12em
      text-align: right

    > div:nth-child(2)
      flex: 3 1 0%
      min-width: 12em

      .columns
        columns: 2

        @media(max-width: 700px)
          columns: 1

        div
          @extend .body-copy
          font-size: 0.9em
          line-height: 1.5em

        div:nth-child(2)
          margin: 1em 0

  &__attribution
    background-color: $sandy
    padding: 2em 18%
    text-align: center

    @media(max-width: 400px)
      padding: 1em

    span
      font-size: 1em
      margin-top: 0.75em

    .divider
      margin: 1.5em auto

    h2
      @extend .secondary-head
      font-size: 0.75em
      font-weight: 600
      letter-spacing: 0.35em
      margin-top: 1em

    h3
      @extend .instructions
      font-size: 0.75em
      font-weight: 400

  &__timeline
    margin: 2.5em

  &__notable-figures
    margin: 2.5em
    position: relative

    @media(max-width: 400px)
      margin: 2.5em 0

    > div:first-child
        max-height: 22em
        overflow: hidden
        position: absolute
        width: 100%
        z-index: -1

        @media(max-width: 400px)
          order: 1

        span
          margin-left: 4em
          max-width: 40%

          @media(max-width: 679px)
            margin: 1em
            max-width: 100%

        img
          max-height: 18em
          object-fit: cover
          width: 100%

    > div:nth-child(2)
      flex: 2
      margin: 20em 0 0 2em
      min-width: 14em
      text-align: right

      @media (max-width: 950px)
        margin: 15em 0 0 0

      @media(max-width: 400px)
        margin: 0
        order: 3

      > div
        margin: 1.25em

        figure
          display: table

        img
          height: auto
          width: 100%

        span
          caption-side: bottom
          display: table-caption

    > div:nth-child(3)
      background: white
      flex: 1
      margin: 12em 3em 0 0em
      min-width: 14em
      padding: 1em

      @media (max-width: 1000px)
        margin: 8em 1em 0 0

      @media (max-width: 679px)
        margin-top: 0

      @media(max-width: 400px)
        margin-top: 9em
        order: 2

  &__provenance
    background: $sandy
    padding: 4em

    @media(max-width: 700px)
      padding: 2em

    div:first-child
      flex: 1
      min-width: 10em

    div:nth-child(2)
      flex: 1
      margin: 1em
      min-width: 10em
      text-align: right

      img
        max-height: 20em

  &__transcribe
    @extend .secondary-head
    letter-spacing: 0.4em
    margin: 4em 0
    text-align: center

  .project-background
    background-image: url('../images/home-bg.jpg')
    height: 25em
