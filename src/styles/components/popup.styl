@import "font-groups.styl"

.react-draggable
  z-index: 100

.drag-handler
  bottom: 1px !important
  right: -3px !important

.drag-handler:before
  content: "\21F2"

.modal
  background: rgba(0, 0, 0, 0.5)
  position: fixed
  left: 0
  top: 0
  width: 100vw
  height: 100vh

  .modal-title
    margin: 10vh 25vw 0 10vw
    flex: 0 0 auto
    color: $white
    padding: 0.5em 1em
    text-align: right

  .modal-content
    margin: 20vh 25vw

.close-button
  font-family: $playfair-display
  font-size: 0.75em
  padding: 1em

.dialog
  border-top: 8px solid $light-grey
  box-shadow: 5px 5px 20px #888888
  width: 100%

  .dialog-content
    min-height: 100%

    > div:first-child
      background-color: white
      box-shadow: 3px 3px 3px $mid-grey
      position: fixed
      width: 100%
      z-index: 1

    h2
      display: inline-block
      font-family: $playfair-display
      font-size: 0.75em
      font-weight: 300
      letter-spacing: 0.25em
      margin: 1em
      text-transform: uppercase

    button
      color: black

.popup
  display: flex
  flex-direction: column
  justify-content: center
  height: 100%
  overflow: hidden
  align-items: stretch

  .popup-content
    flex: 0 1 auto
    background: $white
    color: $text-color
    overflow: auto

  button
    border: none

.popup-content::-webkit-scrollbar
  background-color: white

.popup-content::-webkit-scrollbar-thumb
  background: $dark-grey

.step-through-controls
  text-align: center
