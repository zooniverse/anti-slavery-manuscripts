.subject-viewer
  flex: 1 1 auto
  overflow: hidden
  background: #333  //TMP: visual differentiator for the Subject
  border: 1px solid #333  //TMP: Borders offer visual differentiation but may interfere with precise mathematical calculations of width.

  svg
    background: $light-grey
    border: 1px solid #fff  //TMP: Borders offer visual differentiation but may interfere with precise mathematical calculations of width.

.related-images
  background: $mid-grey
  height: 100%
  overflow: hidden
  width: 3em

  > div:first-child
    transform: rotate(-90deg) translateX(-50%) translateY(-135%)
    width: 7em

    h2
      font-size: 0.6em

  button
    background: transparent
    border: none
    padding: 0

  &__frame
    margin: 0 1em

  &__frames
    line-height: 0.8em
    position: relative
    top: 8em
    text-align: center
    width: 100%

    > div
      background: $dark-grey
      margin: 0.5em 0.5em

      button
        font-size: 0.75em
        line-height: 0.8em

      span
        color: white
        font-size: 0.5em

//TODO: review loading and error indicators.

.svg-image-loading
  animation-name: loading-pulse
  animation-duration: 1s
  animation-direction: alternate
  animation-iteration-count: infinite

.svg-image-error
  fill: #c33
  stroke: #fff
  stroke-width: 4

@keyframes loading-pulse {
  from {
    fill: #39c
  }
  to {
    fill: #fff
  }
}
