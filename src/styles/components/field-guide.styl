@import "font-groups.styl"

.field-guide-container
  padding: 0 0.75em

.field-guide, .crib-sheet__content
  background-color: white
  display: flex
  flex-wrap: wrap
  height: 100%
  margin-top: 3em
  width: 100%

  div
    height: 8em
    padding: 0.25em
    width: 20%

    button
      background: $dark-grey
      display: flex
      flex-direction: column
      margin: auto
      padding: 0

    span
      color: white
      font-size: 0.6em
      height: 4em
      max-width: 10.75em
      overflow: hidden
      padding: 0.5em
      text-align: left

  img
    height: 4.5em
    width: 6.5em
    object-fit: cover

.active-card
  margin-top: 3em

  button
    background-color: transparent
    font-size: 0.6em
    padding: 0.25em 0

  &__content
    display: flex
    margin: 1em 0

    div:first-child
      flex: 5

      h2
        font-family: $playfair-display
        font-weight: 300
        margin: 0 0 0.75em 0

      p
        font-family: $playfair-display
        font-size: 0.75em

    div:nth-child(2)
      flex: 2

    img
      max-height: 100%
      max-width: 100%
