.project-header
  display: flex
  flex-direction: row
  justify-content: space-between
  margin: 1.5em 3.75em

  .main-title
    flex: 1
    font-size 2.5rem

  &__nav
    align-self: flex-start
    font-family: $playfair-sc
    font-size: 0.75rem
    font-weight: 700
    margin-left: auto

    @media (max-width:1060px)
      display: flex
      flex-direction: column

  &__link
    flex: 0 0 auto
    color: $dark-grey
    display: inline-block
    letter-spacing: (0.9/15)em
    margin: 0.5rem 0rem 0rem 1.25rem

    @media (max-width:1060px)
      margin-left: 0

    &--active, &:hover, &:focus
      border-bottom: 2px solid $eggplant
      color: $eggplant

    i
      font-family: $playfair-display
      text-transform: lowercase

    &:first-child
      margin-left: 0
