@import "font-groups.styl"

.app-header
  align-items: center
  background-color: black
  display: flex
  font-size: 0.75rem
  padding: 0rem 0.5rem

  .app-title
    color: $teal-blue

    svg
      margin: 0 0.25em
      vertical-align: middle

  &__nav-links
    list-style: none
    padding-left: 0

  &__link
    color: #cbcccb
    font-size: 0.8em
    margin: 0.5rem 1rem 0 1rem
    padding-bottom: 0.3rem
    text-transform: uppercase

  nav
    flex: 1 1 auto

  .login-button, .logout-button
    font-size: 0.8em
    flex: 0 0 auto
    padding: 0.5em 0 0.5em 1em
    display: inline-block

    span
      display: inline-block
      background: $dark-grey
      color: $white
      padding: 0.5em 1em
      margin-right: 0.5em

    button
      background: $dusty-green
      border: none
      border-radius: 1em
      color: $white
      padding: 0.5em 1em
