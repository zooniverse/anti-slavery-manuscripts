.classifier-page
  display: flex
  flex-direction: row
  padding: 1rem 0

  .help-pane
    display: flex
    flex-direction: column
    font-size: (12/20)rem
    letter-spacing: (2/12)em
    max-width: 20%
    padding: 0 1.5rem 0 4rem

    .help-directions
      b
        text-transform: uppercase

    .help-buttons
      .button
        font-size: (12/20)rem
        margin-bottom: 1em
        width: 100%

      hr
        margin-bottom: 1em
        width: 40%

  .subject-viewer
    display: flex
    flex: 1 1 auto
    flex-direction: column

    .subject-images
      display: flex
      flex: 1 1 auto
      flex-direction: row

      .subject-image
        background: $light-grey
        flex: 0 0 100%

  .classifier-controls
    display: flex
    flex-direction: column
    font-size: (12/20)rem
    letter-spacing: (2/12)em
    margin: 0 1rem
    text-transform: uppercase
    width: 10rem

    .classifier-toolbar
      > div
        display: flex
        flex-direction: row
        margin: 1rem 0

        i
          font-size: 1.25rem

        span
          align-self: center
          margin-left: 0.75rem
